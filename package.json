{
  "name": "rodonaves-api",
  "version": "1.0.1",
  "description": "Scraper Rodonaves com Puppeteer para Render",
  "type": "module",
  "main": "rodonaves-api.js",
  "scripts": {
    "render-build": "PUPPETEER_CACHE_DIR=/opt/render/.cache/puppeteer npx puppeteer browsers install chrome",
    "postinstall": "PUPPETEER_CACHE_DIR=${PUPPETEER_CACHE_DIR:-/opt/render/.cache/puppeteer} npx puppeteer browsers install chrome",
    "start": "node rodonaves-api.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "puppeteer": "^22.4.1"
  }
}
